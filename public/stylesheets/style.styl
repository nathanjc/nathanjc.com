
body 
  background #f5f5f5 url('/images/noise.png')
  font-family "Source Sans Pro", sans-serif
  color #222
  padding-top 4em
  padding-bottom 5em

h1, h2, h3, h5
  font-family "Source Sans Pro", sans-serif
  color #222

h4
  font-family "Source Sans Pro", sans-serif
  color #641e21

h6
  font-family "Ubuntu Mono Regular"
  color #7e8082

p 
  font-size 1em
  font-family "Source Sans Pro", sans-serif

ul
  margin-top 32px
  font-size 32px

li
  margin-bottom 16px
  margin-top 16px
  font-size 16px

pre 
  border 1px solid #f5f5f5 
  background #fff url(/images/noise.png) 
  font-family "Ubuntu Mono", monospace; margin-bottom: 1em

code 
  border-radius: 5px

.project
  -moz-border-radius 3px
  -webkit-border-radius 3px
  border-radius 3px
  background #eeeeee
  border 1px solid #bfbfbf
  -webkit-box-shadow 0 2px 2px rgba(0,0,0,0.1)
  -moz-box-shadow 0 2px 2px rgba(0,0,0,0.1)
  box-shadow 0 2px 2px rgba(0,0,0,0.1)
  color #7b7b7b
  display inline-block
  width 225px
  height 250px
  text-decoration none
  margin-top 25px

.projectfull
  -moz-border-radius 3px
  -webkit-border-radius 3px
  border-radius 3px
  background #eeeeee
  border 1px solid #bfbfbf
  -webkit-box-shadow 0 0 2px rgba(0,0,0,0.1)
  -moz-box-shadow 0 0 2px rgba(0,0,0,0.1)
  box-shadow 0 0 2px rgba(0,0,0,0.1)
  margin-top 25px
  .cardtop
    padding 16px
    background #c1c1c1
  .cardbottom
    background #c1c1c1
    padding 16px

  .projectfullpreview
    padding 16px

.projectcontentpreview
  padding 10px


.buttonlink
  text-decoration none

.projectimg
  padding-top 16px

.morelink
  padding 0
  margin 0
  margin-bottom 16px
  float right

.profile 
  padding 1px
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  border-radius: 3px;

.stream
  margin-bottom 16px
  .streamdate
    float right


.navbar h5
  display inline-block

.navbar a
  color #222
  margin-right 2em

.project
  padding-top 16px

