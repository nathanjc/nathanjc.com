body 
  background #f5f5f5 url('/images/noise.png')
  font-family "Source Sans Pro", sans-serif
  color #222
  padding-top 4em
  padding-bottom 5em

h1, h2, h3, h4, h5
  font-family "Source Sans Pro", sans-serif
  color #222

p 
  font-size 1em
  font-family "Source Sans Pro", sans-serif

pre 
  border 1px solid #f5f5f5 
  background #fff url(/images/noise.png) 
  font-family "Ubuntu Mono", monospace; margin-bottom: 1em

code 
  border-radius: 5px

#profile_img
  margin 0
  padding 0
  border-radius 4px
  border 1px solid #bfbfbf
  box-shadow 0 2px #bfbfbf

.profile 
  padding 1px

.navbar h3
  display inline-block

.navbar a
  color #222
  margin-right 2em